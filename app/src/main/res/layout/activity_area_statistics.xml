<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:alpha="0.8"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:background="@drawable/shape_ll_background"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_ll_background1"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="全区统计"
                android:paddingLeft="30dp"
                android:gravity="left|center"
                android:textSize="20sp"
                android:textColor="@color/color_title"
                />

            <ImageView
                android:id="@+id/iv_area_back"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/backward"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_marginBottom="@dimen/margin_neirong"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="隐患点总数："
                    android:paddingLeft="20dp"
                    android:gravity="left|center"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="@string/ceshi"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_marginBottom="@dimen/margin_neirong"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="群测群防人员总数："
                    android:paddingLeft="20dp"
                    android:gravity="left|center"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="@string/ceshi"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_marginBottom="@dimen/margin_neirong"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="专业监测设备总数："
                    android:paddingLeft="20dp"
                    android:gravity="left|center"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="@string/ceshi"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_marginBottom="@dimen/margin_neirong"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="乡镇分管领导总数："
                    android:paddingLeft="20dp"
                    android:gravity="left|center"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="@string/ceshi"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/margin_neirong"
                android:layout_marginBottom="@dimen/margin_neirong"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="国土所负责人总数："
                    android:paddingLeft="20dp"
                    android:gravity="left|center"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="@string/ceshi"
                    android:textSize="@dimen/leirong_text_size"
                    android:textColor="@color/color_neirong"

                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
